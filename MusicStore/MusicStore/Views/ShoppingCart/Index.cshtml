@model List<MusicStore.Models.CartItem>
@{
    ViewData["Title"] = "Shopping Cart";
    double totalPrice = 0;
}

<h2>Shopping Cart</h2>

<h3>Review your albums</h3>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].Album.Title)
            </th>

            <th>
                @Html.DisplayNameFor(model => model[0].Album.Price) each
            </th>

            <th>
                @Html.DisplayNameFor(model => model[0].Count) 
            </th>

            <th>
                Total
            </th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            totalPrice += item.Album.Price * item.Count;
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Album.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Album.Price) euros
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Count)
                </td>
                <td>
                    @(item.Album.Price * item.Count)
                </td>
                <td>
                    <a asp-action="IncreaseAmountByOne" asp-route-id="@item.CartItemID">
                        +
                    </a> |
                    <a asp-action="DecreaseAmountByOne" asp-route-id="@item.CartItemID">
                        -
                    </a> |
                    <a asp-action="RemoveFromCart" asp-route-id="@item.CartItemID">
                        Remove from cart
                    </a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td>Total</td>
            <td></td>
            <td></td>
            <td>@totalPrice</td>
        </tr>
    </tfoot>
</table>

<a asp-controller="Checkout" asp-action="Create">
    Checkout
</a> |
<a asp-controller="Home" asp-action="Index">
    Back to home
</a>

@model IEnumerable<MusicStore.Models.Genre>



<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDarkDropdown" aria-controls="navbarNavDarkDropdown" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
</button>
<div class="collapse navbar-collapse" id="navbarNavDarkDropdown">
    <ul class="navbar-nav">
        <li class="nav-item dropdown">
            <button class="btn dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                Genres
            </button>
            <ul class="dropdown-menu">
                @foreach (var item in Model)
                {
                    <li>
                        <a asp-controller="Store" asp-action="ListAlbums" asp-route-id="@item.GenreID" class="dropdown-item">@item.Name</a>
                    </li>
                }
                <li class="dropdown-divider"></li>
                <li>
                    <a asp-area="" asp-controller="Store" asp-action="ListGenres" class="dropdown-item">More...</a>
                </li>
            </ul>
        </li>
    </ul>
</div>

